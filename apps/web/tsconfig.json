{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "noEmit": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./src",
    "strict": false,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "./next-env.d.ts",
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".next",
    "**/*.test.*",
    "**/*.spec.*"
  ]
}
