{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "rootDir": "../../",
    "paths": {
      "@surplus/shared": ["packages/shared/src"],
      "@surplus/rules": ["packages/rules/src"],
      "@surplus/connectors": ["packages/connectors/src"],
      "@surplus/audit": ["packages/audit/src"]
    }
  },
  "include": [
    "src/**/*",
    "prisma/**/*",
    "test/**/*",
    "../../packages/shared/src/**/*",
    "../../packages/rules/src/**/*",
    "../../packages/connectors/src/**/*",
    "../../packages/audit/src/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
