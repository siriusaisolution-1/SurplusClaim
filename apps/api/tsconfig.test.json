{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "noEmit": true,
    "types": ["node"],
    "typeRoots": ["./types", "./node_modules/@types"],
    "paths": {
      "@surplus/rules": ["./types/shims"],
      "@surplus/shared": ["./types/shims"],
      "@surplus/connectors": ["./types/shims"],
      "@surplus/audit": ["./types/shims"]
    },
    "strict": false,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}

