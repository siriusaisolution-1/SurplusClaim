# Worker server
PORT=3002

# Database
DATABASE_URL=postgresql://surplus:surplus@localhost:5432/surplus

# Redis (queue)
REDIS_HOST=localhost
REDIS_PORT=6379
WORK_QUEUE_NAME=surplus-jobs

# Communication loop
COMMUNICATION_POLL_INTERVAL=60000
EMAIL_PROVIDER=stub
