{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "baseUrl": ".",
    "moduleResolution": "node",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "rootDir": "src",
    "typeRoots": ["./types", "./node_modules/@types"],
    "paths": {
      "@surplus/rules": ["packages/rules/src"],
      "@surplus/shared": ["packages/shared/src"],
      "@surplus/connectors": ["packages/connectors/src"],
      "@surplus/audit": ["packages/audit/src"]
    }
  }
}
