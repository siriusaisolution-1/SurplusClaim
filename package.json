{
  "name": "surplus-claim-monorepo",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@8.15.4",
  "scripts": {
    "dev": "pnpm -r --filter './apps/**' dev",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm --filter @surplus/api exec prisma generate --schema ./prisma/schema.prisma && pnpm exec tsc -p apps/api/tsconfig.json --noEmit && pnpm exec tsc -p apps/worker/tsconfig.json --noEmit && pnpm exec tsc -p apps/web/tsconfig.json --noEmit",
    "format": "pnpm -r format",
    "build:web": "pnpm --filter @surplus/web build",
    "dev:web": "pnpm --filter @surplus/web dev",
    "lint:web": "pnpm --filter @surplus/web lint",
    "test:web": "pnpm --filter @surplus/web test",
    "deploy:prepare": "pnpm --filter @surplus/api prisma:generate",
    "prisma:validate": "pnpm --filter @surplus/api exec prisma validate --schema ./prisma/schema.prisma && pnpm --filter @surplus/api exec prisma generate --schema ./prisma/schema.prisma",
    "prisma:drift": "pnpm --filter @surplus/api exec prisma migrate diff --from-schema-datamodel=./prisma/schema.prisma --to-migrations=./prisma/migrations --shadow-database-url=$SHADOW_DATABASE_URL --exit-code",
    "postinstall": "pnpm --filter @surplus/api prisma:generate"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "2.29.1",
    "prettier": "3.2.5",
    "typescript": "5.4.5"
  }
}
